<% layout("layouts/AdminBoilerplate") %>

<style>
  /* Reset */
  * {
    box-sizing: border-box;
  }
  body {
    font-family: 'Plus Jakarta Sans', 'Poppins', sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #f3f4f6;
    margin: 0;
    padding: 0;
    min-height: 100vh;
  }
  .profile-container {
    max-width: 900px;
    margin: 60px auto 80px;
    background: #1f2937;
    border-radius: 20px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.7);
    display: flex;
    flex-wrap: wrap;
    padding: 40px;
    gap: 40px;
  }
  /* Sidebar */
  .profile-sidebar {
    flex: 1 1 280px;
    background: #111827;
    border-radius: 20px;
    padding: 30px 25px;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }
  .profile-image {
    width: 160px;
    height: 160px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid #6366f1;
    margin-bottom: 20px;
    box-shadow: 0 0 20px #6366f1;
  }
  .profile-name {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 6px;
    color: #a5b4fc;
    text-align: center;
  }
  .profile-role {
    font-size: 1rem;
    font-weight: 500;
    color: #818cf8;
    margin-bottom: 20px;
  }
  .profile-contact {
    width: 100%;
    font-size: 1rem;
    color: #c7d2fe;
    margin-top: auto;
  }
  .profile-contact strong {
    color: #a5b4fc;
  }

  /* Edit button */
  .edit-profile-btn {
    position: absolute;
    top: 4px;
    right: 8px;
    background-color: #6366f1;
    color: white;
    padding: 8px 14px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.7rem;
    transition: background-color 0.3s ease;
  }
  .edit-profile-btn:hover {
    background-color: #4f46e5;
  }

  /* Main info */
  .profile-main {
    flex: 2 1 500px;
    background: #374151;
    border-radius: 20px;
    padding: 35px 40px;
    color: #e0e7ff;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  .section-title {
    font-weight: 700;
    font-size: 1.5rem;
    border-left: 5px solid #6366f1;
    padding-left: 12px;
    margin-bottom: 12px;
  }
  .profile-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 18px 30px;
  }
  .info-item {
    background: #4b5563;
    padding: 15px 20px;
    border-radius: 12px;
    box-shadow: inset 0 0 8px #6366f1;
    font-size: 1rem;
    font-weight: 600;
    color: #cbd5e1;
  }
  .info-label {
    display: block;
    font-weight: 700;
    color: #a5b4fc;
    margin-bottom: 4px;
    font-size: 0.9rem;
  }
  .bio-text {
    background: #4b5563;
    padding: 18px 25px;
    border-radius: 15px;
    box-shadow: inset 0 0 8px #6366f1;
    font-style: italic;
    font-weight: 500;
    color: #d1d5db;
    line-height: 1.4;
  }

  /* Responsive */
  @media (max-width: 800px) {
    .profile-container {
      flex-direction: column;
      padding: 30px 20px;
    }
    .profile-sidebar, .profile-main {
      flex: unset;
      width: 100%;
    }
  }
</style>

<div class="profile-container">
  <aside class="profile-sidebar">
    <a href="/admin/adminProfile/edit" class="edit-profile-btn">Edit Profile</a>
    <img
      src="<%= user.userProfile.image || '/images/default-profile.png' %>"
      alt="Profile Image"
      class="profile-image"
    />
    <h1 class="profile-name"><%= user.userProfile.name || user.username || 'Admin User' %></h1>
    <p class="profile-role"><%= user.role.toUpperCase() %></p>
    <p class="profile-contact"><strong>Email:</strong> <%= user.email %></p>
  </aside>

  <section class="profile-main">
    <h2 class="section-title">About Me</h2>
    <p class="bio-text"><%= user.userProfile.bio || "No bio provided yet." %></p>

    <h2 class="section-title">Details</h2>
    <div class="profile-info-grid">
      <div class="info-item">
        <span class="info-label">Age</span>
        <span><%= user.userProfile.age || "N/A" %></span>
      </div>
      <div class="info-item">
        <span class="info-label">Work</span>
        <span><%= user.userProfile.work || "N/A" %></span>
      </div>
      <div class="info-item">
        <span class="info-label">Hobbies</span>
        <span><%= user.userProfile.hobbies || "N/A" %></span>
      </div>
      <div class="info-item">
        <span class="info-label">Favorite Animal</span>
        <span><%= user.userProfile.favAnimal || "N/A" %></span>
      </div>
      <div class="info-item">
        <span class="info-label">Relationship Status</span>
        <span><%= user.userProfile.RelationShip || "N/A" %></span>
      </div>
      <div class="info-item">
        <span class="info-label">Current Address</span>
        <span><%= user.userProfile.currentAdress || "N/A" %></span>
      </div>
      <div class="info-item">
        <span class="info-label">Hometown</span>
        <span><%= user.userProfile.homeTownAdress || "N/A" %></span>
      </div>
      <div class="info-item">
        <span class="info-label">College</span>
        <span><%= user.userProfile.Collage || "N/A" %></span>
      </div>
    </div>
  </section>
</div>
