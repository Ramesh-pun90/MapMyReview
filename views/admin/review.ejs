
<div class="container my-5">
  <h2 class="mb-4">All Reviews</h2>

  <% if (reviews.length === 0) { %>
    <p>No reviews found.</p>
  <% } else { %>
    <table class="table table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Review ID</th>
          <th>Content</th>
          <th>Author</th>
          <th>Listing</th>
          <th>Rating</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% reviews.forEach(review => { %>
          <tr>
            <td><%= review._id %></td>
            <td><%= review.body %></td>
            <td><%= review.author?.username || 'N/A' %></td>
            <td><%= review.listing?.title || 'Deleted Listing' %></td>
            <td><%= review.rating %></td>
            <td>
              <form method="POST" action="/admin/reviews/<%= review._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this review?')">
                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>
</div>

