<% layout("layouts/AdminBoilerplate") %>

<main class="profile-edit-container">
  <h2>Edit Admin Profile</h2>

  <form action="/admin/updateAdminProfile?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= user.userProfile?.name || '' %>" />
    </div>

    <div class="form-group">
      <label for="age">Age:</label>
      <input type="number" name="age" id="age" value="<%= user.userProfile?.age || '' %>" />
    </div>

    <div class="form-group">
      <label for="bio">Bio:</label>
      <textarea name="bio" id="bio" placeholder="Tell us about yourself..."><%= user.userProfile?.bio || '' %></textarea>
    </div>

    <div class="form-group">
      <label for="hobbies">Hobbies:</label>
      <input type="text" name="hobbies" id="hobbies" value="<%= user.userProfile?.hobbies || '' %>" />
    </div>

    <div class="form-group">
      <label for="currentAdress">Current Address:</label>
      <input type="text" name="currentAdress" id="currentAdress" value="<%= user.userProfile?.currentAdress || '' %>" />
    </div>

    <div class="form-group">
      <label for="homeTownAdress">Hometown Address:</label>
      <input type="text" name="homeTownAdress" id="homeTownAdress" value="<%= user.userProfile?.homeTownAdress || '' %>" />
    </div>

    <div class="form-group">
      <label for="Collage">College:</label>
      <input type="text" name="Collage" id="Collage" value="<%= user.userProfile?.Collage || '' %>" />
    </div>

    <div class="form-group">
      <label for="RelationShip">Relationship Status:</label>
      <input type="text" name="RelationShip" id="RelationShip" value="<%= user.userProfile?.RelationShip || '' %>" />
    </div>

    <div class="form-group">
      <label for="favAnimal">Favorite Animal:</label>
      <input type="text" name="favAnimal" id="favAnimal" value="<%= user.userProfile?.favAnimal || '' %>" />
    </div>

    <div class="form-group">
      <label for="work">Work:</label>
      <input type="text" name="work" id="work" value="<%= user.userProfile?.work || '' %>" />
    </div>

    <div class="form-group">
      <label for="image">Profile Image:</label>
      <input type="file" name="image" id="image" accept="image/*" />
    </div>

    <button type="submit" class="btn-submit">Update Profile</button>
  </form>
</main>

<style>
  main.profile-edit-container {
    max-width: 700px;
    margin: 3rem auto;
    background: linear-gradient(145deg, #ffffff, #e9f0ff);
    padding: 3rem 3.5rem;
    border-radius: 22px;
    box-shadow:
      0 8px 30px rgba(0, 123, 255, 0.15),
      0 0 15px rgba(0, 123, 255, 0.1);
    font-family: 'Plus Jakarta Sans', sans-serif;
    color: #1e293b;
    transition: box-shadow 0.4s ease;
  }
  main.profile-edit-container:hover {
    box-shadow:
      0 12px 40px rgba(0, 123, 255, 0.3),
      0 0 25px rgba(0, 123, 255, 0.2);
  }

  main h2 {
    font-size: 2.8rem;
    font-weight: 900;
    margin-bottom: 2rem;
    color: #0f172a;
    text-align: center;
    letter-spacing: 1.4px;
    text-shadow: 0 2px 5px rgba(14, 165, 233, 0.4);
  }

  form .form-group {
    margin-bottom: 1.8rem;
    display: flex;
    flex-direction: column;
  }

  form label {
    font-weight: 700;
    margin-bottom: 0.6rem;
    color: #334155;
    letter-spacing: 0.6px;
    user-select: none;
    transition: color 0.3s ease;
  }
  form label:hover {
    color: #0ea5e9;
  }

  form input[type="text"],
  form input[type="number"],
  form input[type="file"],
  form textarea {
    padding: 0.75rem 1.2rem;
    border: 2.5px solid #cbd5e1;
    border-radius: 16px;
    font-size: 1.15rem;
    font-family: inherit;
    color: #334155;
    box-shadow: inset 0 1px 3px rgba(0,0,0,0.07);
    transition:
      border-color 0.4s ease,
      box-shadow 0.4s ease,
      transform 0.3s ease;
  }

  form input[type="text"]:focus,
  form input[type="number"]:focus,
  form input[type="file"]:focus,
  form textarea:focus {
    border-color: #3b82f6;
    box-shadow:
      0 0 10px rgba(59, 130, 246, 0.7),
      inset 0 0 8px rgba(59, 130, 246, 0.3);
    outline: none;
    transform: scale(1.03);
  }

  form textarea {
    min-height: 140px;
    resize: vertical;
    font-family: 'Plus Jakarta Sans', sans-serif;
  }

  /* Button styling */
  form .btn-submit {
    width: 100%;
    padding: 16px 0;
    background: linear-gradient(135deg, #6366f1, #0ea5e9);
    border: none;
    border-radius: 18px;
    font-weight: 900;
    font-size: 1.4rem;
    color: #fff;
    cursor: pointer;
    box-shadow:
      0 6px 20px rgba(14, 165, 233, 0.7),
      0 0 12px rgba(99, 102, 241, 0.8);
    letter-spacing: 1.3px;
    transition:
      background 0.5s ease,
      box-shadow 0.5s ease,
      transform 0.3s ease;
  }

  form .btn-submit:hover {
    background: linear-gradient(135deg, #0ea5e9, #6366f1);
    box-shadow:
      0 10px 30px rgba(14, 165, 233, 0.9),
      0 0 18px rgba(99, 102, 241, 1);
    transform: scale(1.05);
  }

  /* Responsive */
  @media (max-width: 768px) {
    main.profile-edit-container {
      padding: 2rem 2rem;
      margin: 2rem 1rem;
    }

    form .btn-submit {
      font-size: 1.2rem;
      padding: 14px 0;
    }
  }
</style>
