<% layout('layouts/boilerplate') %>

<style>
  /* Container */
  .row.mt-3 {
    max-width: 720px;
    margin: 3rem auto 5rem auto;
    background: #ffffff;
    border-radius: 18px;
    box-shadow:
      0 8px 20px rgba(0, 0, 0, 0.12),
      0 2px 6px rgba(0, 0, 0, 0.05);
    padding: 3rem 3.5rem;
    font-family: 'Plus Jakarta Sans', sans-serif;
    transition: box-shadow 0.3s ease;
  }

  .row.mt-3:hover {
    box-shadow:
      0 12px 40px rgba(0, 0, 0, 0.15),
      0 4px 12px rgba(0, 0, 0, 0.08);
  }

  /* Heading */
  h3.col-8.offset-2 {
    font-weight: 900;
    font-size: 2.4rem;
    color: #222;
    margin-bottom: 2.5rem;
    text-align: center;
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  /* Labels */
  label.form-label {
    font-weight: 700;
    color: #444;
    font-size: 1.1rem;
    margin-bottom: 0.6rem;
    display: block;
    text-transform: capitalize;
    letter-spacing: 0.03em;
  }

  /* Inputs, Textarea, Select */
  input.form-control,
  textarea.form-control,
  select {
    border-radius: 14px;
    border: 1.5px solid #ddd;
    padding: 0.9rem 1.3rem;
    font-size: 1.05rem;
    font-weight: 500;
    color: #333;
    box-shadow: inset 0 1.5px 3px rgba(0,0,0,0.05);
    transition: border-color 0.35s ease, box-shadow 0.35s ease;
    font-family: 'Plus Jakarta Sans', sans-serif;
  }

  input.form-control::placeholder,
  textarea.form-control::placeholder {
    color: #bbb;
    font-style: italic;
  }

  input.form-control:focus,
  textarea.form-control:focus,
  select:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow:
      0 0 10px rgba(37, 99, 235, 0.4),
      inset 0 2px 6px rgba(37, 99, 235, 0.15);
  }

  textarea.form-control {
    min-height: 140px;
    resize: vertical;
  }

  /* Image preview */
  .image-update {
    max-width: 100%;
    max-height: 270px;
    border-radius: 16px;
    display: block;
    margin: 1.5rem 0 2.2rem 0;
    box-shadow:
      0 12px 26px rgba(0,0,0,0.10),
      0 6px 10px rgba(0,0,0,0.05);
    transition: transform 0.3s ease;
  }

  .image-update:hover {
    transform: scale(1.04);
  }

  /* Validation error */
  .invalid-feedback {
    font-size: 0.9rem;
    color: #d32f2f;
    margin-top: 0.3rem;
    font-weight: 600;
  }

  /* Button */
  .btn.btn-dark.edit-btn.mt-3 {
    width: 100%;
    padding: 1rem 0;
    font-weight: 900;
    font-size: 1.25rem;
    border-radius: 16px;
    background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
    color: #fff;
    border: none;
    cursor: pointer;
    letter-spacing: 0.05em;
    box-shadow:
      0 10px 20px rgba(37, 99, 235, 0.35),
      0 6px 12px rgba(37, 99, 235, 0.3);
    transition: background 0.4s ease, box-shadow 0.4s ease, transform 0.3s ease;
    font-family: 'Plus Jakarta Sans', sans-serif;
  }

  .btn.btn-dark.edit-btn.mt-3:hover {
    background: linear-gradient(135deg, #1e40af 0%, #2563eb 100%);
    box-shadow:
      0 14px 30px rgba(30, 64, 175, 0.55),
      0 8px 18px rgba(30, 64, 175, 0.5);
    transform: translateY(-3px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .row.mt-3 {
      padding: 2rem 2rem;
      margin: 2rem auto 3.5rem auto;
    }

    h3.col-8.offset-2 {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .row.mt-3 {
      padding: 1.5rem 1.5rem;
      margin: 1.5rem auto 3rem auto;
    }

    h3.col-8.offset-2 {
      font-size: 1.75rem;
    }
  }
</style>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3 class="col-8 offset-2">Edit Your Listing</h3>

    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" id="title" value="<%= listing.title %>" type="text" class="form-control" required>
        <div class="invalid-feedback">
          Enter a valid Title.
        </div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
        <div class="invalid-feedback">
          Enter a valid short description.
        </div>
      </div>

      <div class="mb-3">
        original Listing Image:<br>
        <img src="<%= originalImageUrl %>" class="image-update">
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">upload new image</label>
        <input name="listing[image]" id="image" type="file" class="form-control">
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" id="price" value="<%= listing.price %>" type="number" class="form-control" required>
          <div class="invalid-feedback">
            Enter a valid price.
          </div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" id="country" value="<%= listing.country %>" type="text" class="form-control" required>
          <div class="invalid-feedback">
            Enter a valid country name.
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" id="location" value="<%= listing.location %>" type="text" class="form-control" required>
        <div class="invalid-feedback">
          Enter a valid location.
        </div>
      </div>

      <div class="mb-3">
        <label for="category">Category:</label><br>
        <select name="listing[category]" id="category" required>
          <option value="">-- Select Category --</option>
          <% categories.forEach(category => { %>
          <option value="<%= category %>" <%= listing.category === category ? "selected" : "" %>><%= category %></option>
          <% }); %>
        </select>
      </div>

      <button class="btn btn-dark edit-btn mt-3">Edit Listing</button>
    </form>
  </div>
</div>
