<% layout("layouts/boilerplate") %>

<style>
  :root {
    --primary: #4f46e5;
    --bg: #f5f7fa;
    --text: #1f2937;
    --muted: #6b7280;
    --card-bg: #ffffffaa;
  }

  body {
    background: var(--bg);
    font-family: 'Plus Jakarta Sans', sans-serif;
  }

  .profile-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 90vh;
    padding: 30px 10px;
  }

  .profile-card {
    max-width: 720px;
    width: 100%;
    background: var(--card-bg);
    backdrop-filter: blur(12px);
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
    animation: fadeIn 0.7s ease-in-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .profile-image {
    width: 130px;
    height: 130px;
    object-fit: cover;
    border-radius: 50%;
    border: 4px solid var(--primary);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    margin: auto;
    display: block;
  }

  .default-icon {
    font-size: 100px;
    color: var(--muted);
    text-align: center;
    margin-bottom: 20px;
  }

  .profile-name {
    text-align: center;
    font-size: 28px;
    font-weight: 700;
    color: var(--text);
    margin-top: 15px;
  }

  .info-list {
    margin-top: 30px;
    list-style: none;
    padding-left: 0;
  }

  .info-list li {
    background: #f0f4ff;
    padding: 14px 20px;
    margin-bottom: 14px;
    border-radius: 12px;
    font-size: 17px;
    font-weight: 500;
    color: var(--text);
    display: flex;
    align-items: center;
    gap: 12px;
    transition: all 0.2s ease;
  }

  .info-list li:hover {
    background: #e0e7ff;
  }

  .info-list i {
    color: var(--primary);
    font-size: 18px;
  }

  @media (max-width: 576px) {
    .profile-card {
      padding: 25px 20px;
    }

    .profile-name {
      font-size: 22px;
    }

    .info-list li {
      font-size: 15px;
      padding: 12px 16px;
    }
  }
</style>

<div class="profile-wrapper">
  <div class="profile-card">
    <% if (user.userProfile?.image) { %>
      <img src="<%= user.userProfile.image %>" alt="Profile Image" class="profile-image">
    <% } else { %>
      <div class="default-icon">
        <i class="fa-solid fa-user-circle"></i>
      </div>
    <% } %>

    <div class="profile-name">@<%= user.username %></div>

    <ul class="info-list">
      <% if (user.userProfile?.name) { %>
        <li><i class="fa-solid fa-id-card"></i> <strong>Name:</strong> <%= user.userProfile.name %></li>
      <% } %>
      <% if (user.userProfile?.bio) { %>
        <li><i class="fa-solid fa-comment-dots"></i> <strong>Bio:</strong> <%= user.userProfile.bio %></li>
      <% } %>
      <% if (user.userProfile?.work) { %>
        <li><i class="fa-solid fa-briefcase"></i> <strong>Work:</strong> <%= user.userProfile.work %></li>
      <% } %>
      <% if (user.userProfile?.homeTownAdress) { %>
        <li><i class="fa-solid fa-location-dot"></i> <strong>From:</strong> <%= user.userProfile.homeTownAdress %></li>
      <% } %>
    </ul>
  </div>
</div>
