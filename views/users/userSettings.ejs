<% layout("layouts/Boilerplate") %>

<style>
  body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(to right, #f0f4f8, #ffffff);
    margin: 0;
    padding: 0;
    color: #1e293b;
  }

  .settings-header {
    text-align: center;
    padding: 3rem 1rem 1rem;
    background: linear-gradient(135deg, #a855f7, #3b82f6);
    color: white;
    border-bottom-left-radius: 50px;
    border-bottom-right-radius: 50px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  .settings-header h2 {
    font-size: 2.4rem;
    font-weight: 700;
    margin: 0;
    letter-spacing: -1px;
  }

  .user-settings-container {
    max-width: 650px;
    margin: -60px auto 3rem;
    background: white;
    padding: 2.5rem;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  .user-section-title {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #334155;
    border-left: 4px solid #6366f1;
    padding-left: 0.6rem;
  }

  label {
    font-weight: 500;
    display: block;
    margin-bottom: 0.4rem;
    color: #475569;
  }

  input[type="text"],
  input[type="email"],
  input[type="password"] {
    width: 100%;
    padding: 14px 16px;
    font-size: 1rem;
    background: #f1f5f9;
    border: 1.5px solid #cbd5e1;
    border-radius: 12px;
    transition: 0.3s;
    margin-bottom: 1.2rem;
  }

  input:focus {
    border-color: #6366f1;
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
    outline: none;
  }

  .user-btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 12px;
    transition: background 0.3s ease, transform 0.2s ease;
    cursor: pointer;
    border: none;
  }

  .user-btn-update-username {
    background: linear-gradient(to right, #9333ea, #6366f1);
    color: white;
  }

  .user-btn-update-email {
    background: linear-gradient(to right, #0ea5e9, #0284c7);
    color: white;
  }

  .user-btn-change-password {
    background: linear-gradient(to right, #10b981, #059669);
    color: white;
  }

  .user-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  form {
    margin-bottom: 2.5rem;
  }

  @media (max-width: 640px) {
    .user-settings-container {
      padding: 1.5rem;
      margin: -40px 1rem 2rem;
    }

    .settings-header h2 {
      font-size: 2rem;
    }
  }
</style>

<!-- 🌟 Beautiful Header -->
<div class="settings-header">
  <h2>User Settings</h2>
</div>

<main>
  <div class="user-settings-container">
    <!-- 🔤 Update Username -->
    <div>
      <div class="user-section-title">Update Username</div>
      <form method="POST" action="/user/settings/update-username">
        <label for="username">New Username</label>
        <input type="text" id="username" name="username" placeholder="new_username" required />
        <button type="submit" class="user-btn user-btn-update-username">Update Username</button>
      </form>
    </div>

    <!-- 📧 Update Email -->
    <div>
      <div class="user-section-title">Update Email</div>
      <form method="POST" action="/user/settings/update-email">
        <label for="email">New Email Address</label>
        <input type="email" id="email" name="newEmail" placeholder="user@example.com" required />
        <button type="submit" class="user-btn user-btn-update-email">Update Email</button>
      </form>
    </div>

    <!-- 🔐 Change Password -->
    <div>
      <div class="user-section-title">Change Password</div>
      <form method="POST" action="/user/settings/change-password">
        <label for="current-password">Current Password</label>
        <input type="password" id="current-password" name="currentPassword" required />

        <label for="new-password">New Password</label>
        <input type="password" id="new-password" name="newPassword" required />

        <label for="confirm-password">Confirm New Password</label>
        <input type="password" id="confirm-password" name="confirmPassword" required />

        <button type="submit" class="user-btn user-btn-change-password">Change Password</button>
      </form>
    </div>
  </div>
</main>
