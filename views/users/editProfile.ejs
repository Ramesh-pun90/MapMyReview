<% layout("layouts/boilerplate") %>

<style>
  .container {
    max-width: 700px;
    background: #fff;
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    margin-top: 40px;
  }

  h2 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    text-align: center;
    color: #2d3748;
  }

  .form-label {
    font-weight: 600;
    color: #4a5568;
  }

  .form-control {
    border-radius: 12px;
    border: 1px solid #cbd5e0;
    padding: 10px 14px;
    font-size: 15px;
    transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }

  .form-control:focus {
    border-color: #4299e1;
    box-shadow: 0 0 0 4px rgba(66, 153, 225, 0.2);
  }

  .form-control::placeholder {
    color: #a0aec0;
  }

  .invalid-feedback {
    font-size: 0.875rem;
    color: #e53e3e;
  }

  .btn-success {
    display: block;
    width: 100%;
    padding: 12px;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 12px;
    background: linear-gradient(135deg, #38a169, #2f855a);
    border: none;
    color: white;
    transition: background 0.3s ease;
    margin-top: 1.5rem;
  }

  .btn-success:hover {
    background: linear-gradient(135deg, #2f855a, #276749);
  }

  textarea.form-control {
    resize: none;
  }
</style>

<div class="container mt-4">
  <h2>Edit Profile</h2>

  <form action="/profile/?_method=PUT" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
    
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" id="name" name="userProfile[name]" value="<%= user.userProfile?.name %>" class="form-control" required>
      <div class="invalid-feedback">Please enter your name.</div>
    </div>

    <div class="mb-3">
      <label for="age" class="form-label">Age</label>
      <input type="number" id="age" name="userProfile[age]" value="<%= user.userProfile?.age %>" class="form-control" required>
      <div class="invalid-feedback">Please enter your age.</div>
    </div>

    <div class="mb-3">
      <label for="bio" class="form-label">Bio</label>
      <textarea id="bio" name="userProfile[bio]" rows="4" class="form-control" required><%= user.userProfile?.bio %></textarea>
      <div class="invalid-feedback">Please enter a bio.</div>
    </div>

    <div class="mb-3">
      <label for="hobbies" class="form-label">Hobbies</label>
      <input id="hobbies" name="userProfile[hobbies]" value="<%= user.userProfile?.hobbies %>" class="form-control" required>
      <div class="invalid-feedback">Please enter your hobbies.</div>
    </div>

    <div class="mb-3">
      <label for="currentAdress" class="form-label">Current Address</label>
      <input id="currentAdress" name="userProfile[currentAdress]" value="<%= user.userProfile?.currentAdress %>" class="form-control" required>
      <div class="invalid-feedback">Please enter your current address.</div>
    </div>

    <div class="mb-3">
      <label for="homeTownAdress" class="form-label">Home Town Address</label>
      <input id="homeTownAdress" name="userProfile[homeTownAdress]" value="<%= user.userProfile?.homeTownAdress %>" class="form-control" required>
      <div class="invalid-feedback">Please enter your hometown address.</div>
    </div>

    <div class="mb-3">
      <label for="RelationShip" class="form-label">Relationship Status</label>
      <input id="RelationShip" name="userProfile[RelationShip]" value="<%= user.userProfile?.RelationShip %>" class="form-control" required>
      <div class="invalid-feedback">Please enter your relationship status.</div>
    </div>

    <div class="mb-3">
      <label for="Collage" class="form-label">College</label>
      <input id="Collage" name="userProfile[Collage]" value="<%= user.userProfile?.Collage %>" class="form-control" required>
      <div class="invalid-feedback">Please enter your college.</div>
    </div>

    <div class="mb-3">
      <label for="favAnimal" class="form-label">Favorite Animal</label>
      <input id="favAnimal" name="userProfile[favAnimal]" value="<%= user.userProfile?.favAnimal %>" class="form-control" required>
      <div class="invalid-feedback">Please enter your favorite animal.</div>
    </div>

    <div class="mb-3">
      <label for="work" class="form-label">Work</label>
      <input id="work" name="userProfile[work]" value="<%= user.userProfile?.work %>" class="form-control" required>
      <div class="invalid-feedback">Please enter your work.</div>
    </div>

    <div class="mb-3">
      <label for="profileImage" class="form-label">Profile Image</label>
      <input type="file" id="profileImage" name="profileImage" class="form-control">
    </div>

    <button class="btn btn-success" type="submit">Update Profile</button>
  </form>
</div>
